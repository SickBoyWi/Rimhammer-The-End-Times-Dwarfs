<Defs>

	<ThingDef ParentName="Wall" Name="RH_TET_Dwarf_Buttressed_Wall">
		<defName>RH_TET_Dwarfs_ButtressedWall</defName>
		<label>buttressed wall</label>
		<description>A very strong, impassable wall. Capable of holding up a roof, or forming a perimeter. Sturdy dwarfen construction, so it's stronger than any human construction.\n\nDwarfs use these walls both outside and inside their holds. They strengthen the mountains themselves, and dwarfs consider them the bones of the mountains.</description>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Building/Structure/Linked/RH_TET_Dwarfs_ButtressedWall</texPath>
			<graphicClass>Graphic_Appearances</graphicClass>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Wall</li>
				<li>Rock</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<uiIconPath>UI/Menu/RH_TET_Dwarfs_ButtressedWall_Menuicon</uiIconPath>
		<statBases>
			<MaxHitPoints>750</MaxHitPoints>
			<WorkToBuild>320</WorkToBuild>
			<Flammability>0.0</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<costStuffCount>10</costStuffCount>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<coversFloor>true</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<useStuffTerrainAffordance>true</useStuffTerrainAffordance>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded><!-- Best affordance needed for stone -->
		<holdsRoof>true</holdsRoof>
		<designationCategory>Structure</designationCategory>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
			<blueprintGraphicData>
				<texPath>Things/Building/Structure/Linked/RH_TET_Dwarfs_ButtressedWall/RH_TET_DwarfWall_Atlas_Blueprint</texPath>
			</blueprintGraphicData>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>1.5</multiplier>
			</li>
		</damageMultipliers>
		<designationHotKey>Misc3</designationHotKey>
		<researchPrerequisites>
			<li>RH_TET_Dwarf_WallsBasic</li>
		</researchPrerequisites>
