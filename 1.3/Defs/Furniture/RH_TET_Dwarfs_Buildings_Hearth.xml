<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>RH_TET_Dwarfs_Hearth</defName>
    <label>dawi hearth</label>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <description>An ornate stone hearth. They&apos;re used for heating and light. Dwarfs also use them to cook at, and use them for joy. \n\nThe hearth is a staple of all dwarf holds. With a steady supply of wood or coal, a hearth will prove useful through the most chaotic times. They&apos;re used as places to gather, and due to the love and artistry put into their construction they are frequently very beautiful. All respecable dawi clans will have them in the main areas of their holds.</description>    
    <graphicData>
      <texPath>Things/Building/Furniture/RH_TET_Dwarfs_Hearth</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>	  
      <drawSize>(3.5,3.5)</drawSize>
	  <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <canOverlapZones>false</canOverlapZones>	
	<uiIconPath>UI/Menu/RH_TET_Dwarfs_Hearth_MenuIcon</uiIconPath>			
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>25</Steel>
    </costList>
    <statBases>
		<MaxHitPoints>350</MaxHitPoints>
		<Flammability>0</Flammability>	  
		<JoyGainFactor>1</JoyGainFactor>
		<WorkToBuild>2500</WorkToBuild>
		<Beauty>20</Beauty>
		<Mass>250</Mass>
		<WorkTableWorkSpeedFactor>0.9</WorkTableWorkSpeedFactor>		
    </statBases>
    <size>(3,2)</size>
    <thingCategories>
      <!--<li>BuildingsProduction</li>-->
      <li>RH_TET_Dwarfs_BuildingsFurniture</li>
	</thingCategories>	
    <minifiedDef>MinifiedThing</minifiedDef>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <socialPropernessMatters>true</socialPropernessMatters>			
    <fillPercent>0.25</fillPercent>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
	<!--<passability>Impassable</passability>-->
	<pathCost>75</pathCost>
    <surfaceType>Item</surfaceType>
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	<comps>		  
      <li Class="CompProperties_Flickable" />
	  <li Class="CompProperties_Forbiddable"/>   
		<li Class="CompProperties_Refuelable">
			<fuelConsumptionRate>2.5</fuelConsumptionRate>
			<fuelCapacity>150.0</fuelCapacity>
			<fuelFilter>
				<thingDefs>
					<li>WoodLog</li>
					<li>RH_TET_Coal</li>
				</thingDefs>
			</fuelFilter>
			<consumeFuelOnlyWhenUsed>false</consumeFuelOnlyWhenUsed>
			<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
			<initialFuelPercent>.05</initialFuelPercent>
		</li>
		<li Class="CompProperties_Glower">
			<glowRadius>8</glowRadius>
			<glowColor>(252,187,113,0)</glowColor>
		</li>
		<li Class="CompProperties_HeatPusher">
			<compClass>CompHeatPusherPowered</compClass>	  
			<heatPerSecond>15</heatPerSecond>
			<heatPushMaxTemperature>20</heatPushMaxTemperature>
		</li>
		<li>
			<compClass>CompReportWorkSpeed</compClass>
		</li>
	</comps>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <recipes>	        
	  <li>CookMealSimple</li>
      <li>CookMealFine</li>
      <li>CookMealLavish</li>
      <li>CookMealSurvival</li>
      <li>CookMealSimpleBulk</li>
      <li>CookMealFineBulk</li>
      <li>CookMealLavishBulk</li>
      <li>CookMealSurvivalBulk</li>
      <li>Make_Pemmican</li>
      <li>Make_PemmicanBulk</li>
      <li>CookMealFine_Veg</li>
      <li>CookMealFineBulk_Veg</li>
      <li>CookMealFine_Meat</li>
      <li>CookMealFineBulk_Meat</li>
      <li>CookMealLavish_Veg</li>
      <li>CookMealLavishBulk_Veg</li>
      <li>CookMealLavish_Meat</li>
      <li>CookMealLavishBulk_Meat</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <joyKind>Meditative</joyKind>		
		<isMealSource>true</isMealSource>
      <watchBuildingStandDistanceRange>
        <min>3</min>
        <max>3</max>		
      </watchBuildingStandDistanceRange>		
		<watchBuildingStandRectWidth>3</watchBuildingStandRectWidth>		
      <buildingTags>
        <li>Production</li>
      </buildingTags>
    </building>
    <researchPrerequisites>
      <li>RH_TET_Dwarfs_Lighting_Advanced</li>
    </researchPrerequisites>		
    <designationCategory>Production</designationCategory>
  </ThingDef>

</Defs>